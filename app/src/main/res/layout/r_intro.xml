<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Vowel_Intro">

    <!-- Parent Layout to hold rows -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView android:id="@+id/hiragana1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ら" android:textSize="30sp" />
            <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="ra" android:textSize="30sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/playButton1" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Play">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView android:id="@+id/hiragana2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="り" android:textSize="30sp" />
            <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="ri" android:textSize="30sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/playButton2" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Play">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView android:id="@+id/hiragana3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="る" android:textSize="30sp" />
            <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="ru" android:textSize="30sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/playButton3" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Play">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView android:id="@+id/hiragana4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="れ" android:textSize="30sp" />
            <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="re" android:textSize="30sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/playButton4" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Play">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/hiragana5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ろ" android:textSize="30sp" />
            <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="ro" android:textSize="30sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/playButton5" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Play">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
