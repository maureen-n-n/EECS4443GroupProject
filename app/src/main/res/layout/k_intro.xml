<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ff123456"
    tools:context=".Vowel_Intro">

    <!-- Parent Layout to hold rows -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView android:id="@+id/hiragana1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="か" android:textSize="24sp" />
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ka" android:textSize="18sp" />
            <Button android:id="@+id/playButton1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Play" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView android:id="@+id/hiragana2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="き" android:textSize="24sp" />
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ki" android:textSize="18sp" />
            <Button android:id="@+id/playButton2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Play" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView android:id="@+id/hiragana3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="く" android:textSize="24sp" />
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ku" android:textSize="18sp" />
            <Button android:id="@+id/playButton3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Play" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView android:id="@+id/hiragana4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="け" android:textSize="24sp" />
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ke" android:textSize="18sp" />
            <Button android:id="@+id/playButton4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Play" />
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/hiragana5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="こ" android:textSize="24sp" />
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ko" android:textSize="18sp" />
            <Button android:id="@+id/playButton5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Play" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
